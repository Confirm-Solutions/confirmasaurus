{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignorePaths": [
    "**/node_modules/**",
    "**/bower_components/**",
    "research/*"
  ],
  "extends": [
    "config:base",
    "schedule:weekly",
    "group:nodeJs"
  ],
  "pre-commit": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "dependencyDashboard": true,
  "automergeType": "pr",
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchManagers": ["pre-commit"],
      "groupName": "precommit",
      "automerge": "true"
    }
  ]
}
